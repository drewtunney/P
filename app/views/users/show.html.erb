<h2>Following</h2>
<ul>
  <% for friendship in @user.friendships %>
    <li>
      <%=h friendship.friend.email %>
      (<%= button_to "remove", friendship, :method => :delete %>)
    </li>
  <% end %>
</ul>

<p><%= link_to "Find People To Follow", users_path %></p>

<h2>Followers</h2>
<ul>
  <% for user in @user.inverse_friends %>
    <li><%=h user.email %></li>
  <% end %>
</ul>