

<div ng-controller="MessagesCtrl">

  <h4>Compose Message</h4>
  <form ng-submit="createMessage()">
    <input type="text" ng-model= "messageContents" placeholder="What's on your mind?"></input>
    <button type="submit"> Create Message </button>
  </form>

  <ul ng-repeat="message in messages">
    <li> {{message.messages.content}} <i ng-click="like()" class="fa fa-thumbs-o-up"></i> <i ng-click="deleteMessage()" class="fa fa-trash-o"></i> </li>

  </ul>
  <button ng-click="refresh()">Refresh</button>
</div>